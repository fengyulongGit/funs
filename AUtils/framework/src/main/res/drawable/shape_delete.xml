<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:color="@android:color/transparent"
                android:width="2dp" />
            <size
                android:width="20dp"
                android:height="20dp" />
        </shape>
    </item>
    <item
        android:top="3dp"
        android:left="3dp"
        android:bottom="3dp"
        android:right="3dp">
        <rotate
            android:fromDegrees="-45"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="45">
            <shape android:shape="line">
                <stroke
                    android:width="2dp"
                    android:color="@color/edit_delete" />
            </shape>
        </rotate>
    </item>
    <item
        android:top="3dp"
        android:left="3dp"
        android:bottom="3dp"
        android:right="3dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="-45">
            <shape android:shape="line">
                <stroke
                    android:width="2dp"
                    android:color="@color/edit_delete" />
            </shape>
        </rotate>
    </item>
</layer-list>