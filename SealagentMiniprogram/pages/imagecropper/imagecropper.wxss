page{
  width: 100vw;
  height: 100vh;
  background: #0e0d0d;
}

image-cropper {
  width: 100%;
  height: 100%;
}

.crop_cancel {
  position: absolute;
  top: 16px;
  left: 16px;
  font-size: 16px;
  text-align: center;
  color: white;
  z-index: 10;
}

.crop_ok {
  position: absolute;
  top: 16px;
  right: 16px;
  font-size: 16px;
  text-align: center;
  color: white;
  z-index: 10;
}

.hint {
  position: absolute;
  bottom: 10px;
  width: 100%;
  font-size: 12px;
  text-align: center;
  color: white;
  z-index: 10;
}
