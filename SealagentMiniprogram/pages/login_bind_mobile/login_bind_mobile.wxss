.title_text {
  padding-left: 30px;
  padding-top: 60px;
  font-size: 22px;
  color: #333;
  letter-spacing: 0.07px;
}

.input_mobile {
  width: calc(100vw - 60px);
  height: 46px;
  margin: 30px 30px 0 30px;
  line-height: 46px;
  font-size: 18px;
  color: #333;
  letter-spacing: 0.05px;
}

.input_placeholder {
  font-size: 15px;
  color: #ccc;
  letter-spacing: 0.05px;
}

.input_captcha {
  width: calc(100vw - 60px - 112px - 10px);
  height: 46px;
  margin-left: 30px;
  line-height: 46px;
  font-size: 18px;
  color: #333;
  letter-spacing: 0.05px;
}

.send_captcha {
  width: 112px;
  height: 32px;
  border: 1px solid #ff9a08;
  border-radius: 18px;
  text-align: center;
  line-height: 32px;
  font-size: 14px;
  color: #ff9a08;
  letter-spacing: 0.05px;
  margin-left: 10px;
  margin-right: 30px;
}

.send_captcha_disable {
  width: 112px;
  height: 32px;
  border: 1px solid #ccc;
  border-radius: 18px;
  text-align: center;
  line-height: 32px;
  font-size: 14px;
  color: #ccc;
  letter-spacing: 0.05px;
  margin-left: 10px;
  margin-right: 30px;
}

.splite_line {
  width: calc(100% - 60px);
  margin: 0 30px;
}

.btn_login {
  background: #ff9a08;
  border-radius: 24px;
  height: 48px;
  width: calc(100vw - 60px);
  margin: 70px 30px 0 30px;
  line-height: 48px;
  font-size: 20px;
  color: #fff;
  letter-spacing: 0.07px;
  text-align: center;
}

.btn_login_disable {
  background: #e5e5e5;
  border-radius: 24px;
  height: 48px;
  width: calc(100vw - 60px);
  margin: 70px 30px 0 30px;
  line-height: 48px;
  font-size: 20px;
  color: #fff;
  letter-spacing: 0.07px;
  text-align: center;
}
